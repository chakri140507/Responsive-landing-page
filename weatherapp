<body>
    <div class="head">Weather App</div>
    <form class="inputBox">
        <label>üìçLocation</label>
        <input type="text" name="" class="textBox">
        <button type="submit" class="submitBtn">Get weather</button>
    </form>
    <div class="card" style="display: none;">
     
    </div>
